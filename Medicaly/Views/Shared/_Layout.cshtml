<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="~/Content/Site.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
          integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

    <link href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
          integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />

    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>


</head>
<body>
    <div id="App">
        <!-- NavBar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">Medicaly</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-betwee" id="navbarText">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/About">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Pricing</a>
                        </li>
                    </ul>
                    <div class=" me-auto">
                        <form action="" method="POST" enctype="multipart/form-data" class="navbar-form form-inline">
                            <div class="input-group search-box">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success" type="">Search</button>
                            </div>
                        </form>
                    </div>
                    <span class="navbar-text">
                        @{
                            if (Session["Nama"] == null)
                            {
                                <button class="btn btn-outline-primary " type="submit"><a href="/Auth/Login">Login</a></button>
                                <button class="btn btn-outline-primary " type="submit"><a href="/Auth/Register">Register</a></button>
                            }
                            else if (Session["UserType"].ToString() == "Customer")
                            {
                                <div class="dropdown">
                                    <a href="#" class="nav-item dropdown-toggle nav-link user-action" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <img src="~/AppFile/Images/Customers/@Session["FotoProfile"]" class="avatar" alt="Avatar">
                                        @Session["Nama"]
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li> <a href="#" class="dropdown-item"><i class="fa fa-user-o"></i> Shopping History</a></li>
                                        <li><a href="" class="dropdown-item"><i class="fa fa-calendar-o"></i> My Profile</a></li>
                                        <li><a href="/Auth/Logout" class="dropdown-item"><i class="fa fa-sliders"></i> Logout</a></li>
                                    </ul>
                                </div>
                            }
                            else if (Session["UserType"].ToString() == "Pharmacy")
                            {
                                <div class="dropdown">
                                    <a href="#" class="nav-item dropdown-toggle nav-link user-action" data-bs-toggle="dropdown"
                                       aria-expanded="false">
                                        <img src="~/AppFile/Images/Pharmacies/@Session["FotoProfile"]" class="avatar" alt="Avatar">
                                        @Session["Nama"]
                                        <b class="caret"></b>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li> <a href="/Pharmacy/Product" class="dropdown-item"><i class="fa fa-user-o"></i> Manage Products</a></li>
                                        <li> <a href="#" class="dropdown-item"><i class="fa fa-user-o"></i> Manage Transactions</a></li>
                                        <li><a href="" class="dropdown-item"><i class="fa fa-calendar-o"></i> My Profile</a></li>
                                        <li><a href="/Auth/Logout" class="dropdown-item"><i class="fa fa-sliders"></i> Logout</a></li>
                                    </ul>
                                </div>
                            }
                        }
                    </span>
                </div>
            </div>
        </nav>

        <main>
            <div class="container body-content" style="margin-top: 100px; margin-bottom: 120px;">
                @RenderBody()
            </div>
        </main>

        <footer id="footer" class="bg-light mt-5">
            <div class="container text-dark py-2 pt-4">
                <ul class="p-0 m-0 list-unstyled d-inline-flex justify-content-center">
                    <li class="me-4 faicon">
                        <a href="" class="text-decoration-none text-reset"
                           target="_blank">
                            <i class="fab fa-facebook fa-2x"></i>
                        </a>
                    </li>
                    <li class="me-4 faicon">
                        <a href="" class="text-decoration-none text-reset"
                           target="_blank">
                            <i class="fab fa-instagram fa-2x"></i>
                        </a>
                    </li>
                </ul>
                <p class="mt-3">This website is designed and built with love by Medicaly.</p>
                <hr style="background-color:rgb(182, 194, 201);">
                <p class="text-center">Copyright &copy 2021 Medicaly</p>
            </div>
        </footer>
    </div>
    @RenderSection("scripts", required: false)

    @section scripts {
        <script>
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        </script>
    }

</body>
</html>
