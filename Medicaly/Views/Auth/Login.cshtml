@model Medicaly.Models.Customer
@{
    ViewBag.Title = "Login Page - Medicaly";
}

<section id="loginPage">
    <div class="mx-auto mt-lg-3 mb-lg-5 shadow p-3 mb-5 bg-white rounded" style="width: 600px;">
        <section id="title">
            <div class="card-header bg-light">
                <h3>Medicaly</h3>
                <h8>Don't have Medicaly account? <a href="">Register</a></h8>
            </div>
        </section>
        <div class="card-body">
            <section id="loginForm">
                @using (Html.BeginForm("Post", "Auth", FormMethod.Post, htmlAttributes: new { @id = "login" }))
                {
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-sm-12 col-form-label" })
                        <div class="col-sm-12">
                            @Html.TextBoxFor(model => model.Email, htmlAttributes: new { @class = "form-control mt-2", @id = "Email", @placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "col-sm-12 col-form-label", })
                        <div class="col-sm-12">
                            @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control mt-2", @id = "Password", @placeholder = "Password" })
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-primary  mt-2 pr-5 pl-5" onclick="login()">Login</button>
                    </div>
                }
            </section>
        </div>
    </div>
</section>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>

    <script>
        var status = null;
        function login() {
            console.log($("#Username").val());
        }
        $(document).ready(function () {
            $('#login').validate({
                rules: {
                    Email: {
                        required: true,
                    },
                    Password: {
                        required: true,
                        minlength: 6
                    }
                },
                messages: {
                    Password: {
                        minlength: "password should be at least 6 characters"
                    }
                }
            });
        });
    </script>
}


