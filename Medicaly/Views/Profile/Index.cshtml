@model Medicaly.ViewModels.ProfileViewModel

@{
    ViewBag.Title = "Medicaly - Profile";

    string form = "";
    if (Model.pharmacies == null && Model.doctors == null)
    {
        form = "formPictureCustomer(this)";
    }
    else if (Model.customers == null && Model.doctors == null)
    {
        form = "formPicturePharmacy(this)";
    }
    else if (Model.customers == null && Model.pharmacies == null)
    {
        form = "formPictureDoctor(this)";
    }
}


<section id="profile">
    <div id="" class="mb-5">
        <div class="container">
            @if (Model.customers == null && Model.doctors == null)
            {
                <a href="/Pharmacy" class="btn btn-secondary pe-4 ps-4 mb-3">
                    Back to dashboard
                </a>
            }

            <div class="card border-0 rounded-20 shadow-sm">
                <div class="card-body text-center my-0">
                    <div class="section-line mx-auto"></div>
                    <h6 class="text-muted pt-3">MY PROFILE</h6>
                    @if (Model.pharmacies == null && Model.doctors == null)
                    {
                        <h2 class="mb-4">Welcome, @Model.customers.Nama</h2>
                    }
                    else if (Model.customers == null && Model.doctors == null)
                    {
                        <h2 class="mb-4">Welcome, @Model.pharmacies.NamaPharmacy</h2>
                    }
                    else if (Model.customers == null && Model.pharmacies == null)
                    {
                        <h2 class="mb-4">Welcome, @Model.doctors.Nama</h2>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container profile pt-3 pb-5">
        <div class="row gutters">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card border-0 rounded-20 shadow-sm cards h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="user-avatar pt-2 pb-5">
                                    @if (Model.pharmacies == null && Model.doctors == null)
                                    {
                                        <img class="img-profile" src="~/App_File/Images/Customers/@Model.customers.FotoProfile" alt="Maxwell Admin">
                                    }
                                    else if (Model.customers == null && Model.doctors == null)
                                    {
                                        <img src="~/App_File/Images/Pharmacies/@Model.pharmacies.FotoPharmacy" alt="Maxwell Admin">
                                    }
                                    else if (Model.customers == null && Model.pharmacies == null)
                                    {
                                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Maxwell Admin">
                                    }
                                </div>
                                @if (Model.pharmacies == null && Model.doctors == null)
                                {
                                    <h5 class="user-name">@Model.customers.Nama</h5>
                                    <h6 class="user-email">@Model.customers.Email</h6>
                                }
                                else if (Model.customers == null && Model.doctors == null)
                                {
                                    <h5 class="user-name">@Model.pharmacies.NamaPharmacy</h5>
                                    <h6 class="user-email">@Model.pharmacies.EmailPharmacy</h6>
                                }
                                else if (Model.customers == null && Model.pharmacies == null)
                                {
                                    <h5 class="user-name">@Model.doctors.Nama</h5>
                                    <h6 class="user-email">@Model.doctors.Email</h6>
                                }

                            </div>

                            <div class="text-center">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updatePicture">
                                    Update Picture
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card border-0 rounded-20 shadow-sm cards h-100">
                    <div class="card-body">
                        @if (Model.pharmacies == null && Model.doctors == null)
                        {
                            <form id="formUpdateProduct" enctype="multipart/form-data" method="post" onsubmit="return updateCustomer(this)">
                                <div class="row gutters pb-5">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mb-2 text-primary pb-2">Personal Details</h6>
                                    </div>
                                    <hr />
                                    <input id="Id" name="Id" value="@Model.customers.Id" hidden />
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                        <div class="form-group">
                                            <label for="Nama">Full Name</label>
                                            <input type="text" class="form-control" id="Nama" name="Nama" value="@Model.customers.Nama" placeholder="Enter full name" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.customers.Email" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                        <div class="form-group">
                                            <label for="NoHandphone">Phone</label>
                                            <input type="tel" class="form-control" id="NoHandphone" name="NoHandphone" value="@Model.customers.NoHandphone" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters pt-5">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <div class="text-right">
                                            <a href="/Home/" class="btn btn-secondary ps-5 pe-5">Change Password</a>
                                            <button type="submit" id="submit" name="submit" class="btn btn-primary ps-5 pe-5">Update Personal</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                        else if (Model.customers == null && Model.doctors == null)
                        {
                            <form id="formUpdateProduct" enctype="multipart/form-data" method="post" onsubmit="return updatePharmacy(this)">
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mb-2 text-primary">Pharmacy Details</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="NamaPharmacy">Full Name</label>
                                            <input type="text" class="form-control" id="NamaPharmacy" name="NamaPharmacy" value="@Model.pharmacies.NamaPharmacy" placeholder="Enter full name" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="EmailPharmacy">Email</label>
                                            <input type="email" class="form-control" id="EmailPharmacy" name="EmailPharmacy" value="@Model.pharmacies.EmailPharmacy" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="NoTelephone">Phone</label>
                                            <input type="text" class="form-control" id="NoTelephone" name="NoTelephone" value="@Model.pharmacies.NoTelephone" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Alamat">Address</label>
                                            <input type="url" class="form-control" id="Alamat" value="@Model.pharmacies.Alamat" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters pt-3">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mt-3 mb-2 text-primary">PIC Details</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="NamaPIC">Nama PIC</label>
                                            <input type="text" class="form-control" id="NamaPIC" name="NamaPIC" value="@Model.pharmacies.NamaPIC" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="EmailPIC">Emai PIC</label>
                                            <input type="email" class="form-control" id="EmailPIC" name="EmailPIC" value="@Model.pharmacies.EmailPharmacy" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 pt-5">
                                        <div class="text-right">
                                            <button type="button" id="submit" name="submit" class="btn btn-secondary ps-5 pe-5">Cancel</button>
                                            <button type="button" id="submit" name="submit" class="btn btn-primary ps-5 pe-5">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                        else if (Model.customers == null && Model.pharmacies == null)
                        {
                            <form id="formUpdateProduct" enctype="multipart/form-data" method="post" onsubmit="return updateDoctor(this)">
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mb-2 text-primary">Pharmacy Details</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="NoKTP">NO KTP</label>
                                            <input type="text" class="form-control" id="NoKTP" name="NoKTP" value="@Model.doctors.NoKTP" placeholder="Enter full name" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="SpesialisId">Email</label>
                                            <input type="text" class="form-control" id="SpesialisId" value="@Model.doctors.Spesiali.Nama" readonly>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Nama">Full Name</label>
                                            <input type="text" class="form-control" id="Nama" name="Nama" value="@Model.doctors.Nama" placeholder="Enter full name" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Email">Email</label>
                                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.doctors.Email" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="NoHandphone">Phone</label>
                                            <input type="text" class="form-control" id="NoHandphone" name="NoHandphone" value="@Model.doctors.NoHandphone" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Alamat">Address</label>
                                            <input type="url" class="form-control" id="Alamat" value="@Model.pharmacies.Alamat" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                        <h6 class="mt-3 mb-2 text-primary">Pengalaman</h6>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="Pengalaman">Pengalaman</label>
                                            <input type="number" class="form-control" id="Pengalaman" name="Pengalaman" value="@Model.doctors.Pengalaman" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="STR">STR</label>
                                            <input type="text" class="form-control" id="STR" name="STR" value="@Model.doctors.STR" required>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label for="SIP">SIP</label>
                                            <input type="text" class="form-control" id="SIP" name="SIP" value="@Model.doctors.SIP" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 pt-5">
                                        <div class="text-right">
                                            <button type="button" id="submit" name="submit" class="btn btn-secondary ps-5 pe-5">Cancel</button>
                                            <button type="button" id="submit" name="submit" class="btn btn-primary ps-5 pe-5">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>


    @if (Model.pharmacies == null && Model.doctors == null)
    {
        if (Model.Alamat != null)
        {

            <div class="container">
                <div class="card border-0 rounded-20 shadow-sm cards h-100">
                    <div class="card-body">
                        <div class="row gutters pb-4">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-primary pb-2">Alamat Anda</h6>
                            </div>
                            <hr />
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="LabelAlamat">Label Alamat</label>
                                    <input type="text" class="form-control" id="LabelAlamat" name="LabelAlamat" value="@Model.Alamat.LabelAlamat" placeholder="Enter full name" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="NamaPenerima">Nama Penerima</label>
                                    <input type="text" class="form-control" id="NamaPenerima" name="NamaPenerima" value="@Model.Alamat.NamaPenerima" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="NoHandphone">Phone</label>
                                    <input type="tel" class="form-control" id="NoHandphone" name="NoHandphone" value="@Model.Alamat.NoHandphone" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="KotaKecamatan">Kota atau Kecamatan</label>
                                    <input type="text" class="form-control" id="KotaKecamatan" name="KotaKecamatan" value="@Model.Alamat.KotaKecamatan" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="KodePos">Kode Pos</label>
                                    <input type="text" class="form-control" id="KodePos" name="KodePost" value="@Model.Alamat.KodePost" readonly>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12 pt-2">
                                <div class="form-group">
                                    <label for="Alamat">Alamat</label>
                                    <textarea type="text" class="form-control" id="Alamat" name="Alamat!" readonly>@Model.Alamat.Alamat1</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <a href="/Profile/Alamat/@Model.Alamat.Id" class="btn btn-secondary ps-5 pe-5">Update Alamat</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container">
                <div class="card border-0 rounded-20 shadow-sm cards h-100">
                    <div class="card-body">
                        <div class="row gutters">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <h6 class="mb-2 text-dark pb-2">Anda belum mempunyai alamat!</h6>
                            </div>
                        </div>
                        <div class="row gutters pt-3">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="text-right">
                                    <a href="/Profile/Alamat/" class="btn btn-primary ps-5 pe-5">Tambah Alamat</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    }


</section>


<!-- Modal -->
<div class="modal fade" id="updatePicture" tabindex="-1" aria-labelledby="updatePictureLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updatePictureLabel">Update Profile Picture</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formupdate" method="POST" enctype="multipart/form-data" onsubmit="return @form">
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="col-sm-12 mt-2">
                            <input type="file" class="form-control" name="ImageUpload" id="ImageUpload" placeholder="No file chosen" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/UpdateProfile.js"></script>
}