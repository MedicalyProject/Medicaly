@model Medicaly.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Medicaly - Shopping Cart";

    long totalHarga = 0;
    long ongkosKirim = 0;
    long hargPlusKirim = 0;
}

<!--Section: Block Content-->
<section id="ShoppingCart">

    <!--Grid row-->
    <div class="row">

        <!--Grid column-->
        <div class="col-lg-8">
            @if (Model.shoppingCarts.Count() > 0)
            {
                <!-- Card -->
                <div class="card wish-list mb-3">
                    <div id="Cart" class="card-body">

                        <h5 class="mb-4">Cart (<span>@Model.shoppingCarts.Count()</span> items)</h5>

                        @{
                            foreach (var item in Model.shoppingCarts)
                            {
                                <div class="row mb-4">
                                    <div class="col-md-5 col-lg-3 col-xl-3">
                                        <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                            <a href="~/App_File/Images/Products/@item.Product.ProductFoto" target="_blank">
                                                <div class="mask waves-effect waves-light">
                                                    <img class="img-fluid w-100"
                                                         src="~/App_File/Images/Products/@item.Product.ProductFoto" alt="Card image cap">
                                                    <div class="mask rgba-black-slight waves-effect waves-light"></div>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-lg-9 col-xl-9">
                                        <div>
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    <h5>@item.Product.Nama</h5>
                                                    <p class="mb-3 text-muted text-uppercase small">@item.Product.Pharmacy.NamaPharmacy</p>
                                                    <p class="mb-2 text-muted text-uppercase small">Kategori: @item.Product.Category</p>
                                                    <p class="mb-3 text-muted text-uppercase small">Stok: @item.Product.Stock</p>
                                                </div>
                                                <div>
                                                    <div class="input-group">
                                                        <span class="input-group-btn">
                                                            <button type="button" class="quantity-left-minus btn btn-danger btn-number"
                                                                    data-type="minus" data-field="">
                                                                <span class="glyphicon glyphicon-minus">-</span>
                                                            </button>
                                                        </span>
                                                        <input type="text" id="quantity" name="quantity" class="input-number me-2 ms-2"
                                                               value="@item.Quantity" min="1" max="" style="width: 30px">
                                                        <span class="input-group-btn">
                                                            <button type="button" class="quantity-right-plus btn btn-success btn-number"
                                                                    data-type="plus" data-field="">
                                                                <span class="glyphicon glyphicon-plus">+</span>
                                                            </button>
                                                        </span>
                                                    </div>
                                                    <small id="passwordHelpBlock" class="form-text text-muted text-center">
                                                        (Note, 1 piece)
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <a href="" type="button" class="card-link-secondary small text-uppercase me-3"
                                                       onclick="deleteCart(@item.Id)">
                                                        <i class="fas fa-trash-alt me-1"></i> Remove item
                                                    </a>
                                                    <a href="" type="button" class="card-link-secondary small text-uppercase">
                                                        <i class="fas fa-heart me-1"></i> Move to wish list
                                                    </a>
                                                </div>
                                                <p class="mb-0"><span><strong>Rp.@item.Product.Price</strong></span></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="mb-4">
                                totalHarga += item.Product.Price;
                            }
                        }


                        <p class="text-primary mb-0">
                            <i class="fas fa-info-circle mr-1"></i> Do not delay the purchase, adding
                            items to your cart does not mean booking them.
                        </p>

                    </div>
                </div>
                <!-- Card -->

            }
            else
            {
                <h1>Keranjang Belanja Kosong</h1>
                <a href="/" type="button" class="card-link-secondary small text-uppercase">
                    Mulai Belanja
                </a>
            }

        </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-lg-4">

                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <h5 class="mb-3">The total amount of</h5>

                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                Temporary amount
                                <span>Rp.@totalHarga</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                Shipping
                                <span>Gratis</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                                <div>
                                    <strong>The total amount of</strong>
                                    <strong>
                                        <p class="mb-0">(including VAT)</p>
                                    </strong>
                                </div>
                                @{
                                    hargPlusKirim = ongkosKirim + totalHarga;
                                }
                                <span><strong>Rp.@hargPlusKirim</strong></span>
                            </li>
                        </ul>

                        <button type="button" class="btn btn-primary btn-block waves-effect waves-light ps-3 pe-3">Checkout</button>

                    </div>
                </div>
                <!-- Card -->
                <!-- Card -->
                <div class="card mb-3">
                    <div class="card-body">

                        <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse" href="#collapseExample1"
                           aria-expanded="false" aria-controls="collapseExample1">
                            Add a discount code (optional)
                            <span><i class="fas fa-chevron-down pt-1"></i></span>
                        </a>

                        <div class="collapse" id="collapseExample1">
                            <div class="mt-3">
                                <div class="md-form md-outline mb-0">
                                    <input type="text" id="discount-code1" class="form-control font-weight-light"
                                           placeholder="Enter discount code">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Card -->

            </div>
            <!--Grid column-->

        </div>
    <!--Grid row-->

</section>
<!--Section: Block Content-->

@section scripts {
    <script src="~/Scripts/ProductCart.js"></script>
}